{
  "name": "node-boilerplate-server",
  "version": "1.0.0",
  "description": "node boilerplate server",
  "author": "gazbond.co.uk",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --format codeframe --ignore-pattern \"node_modules/**/*.js\" \"**/*.js\"",
    "lint:fix": "eslint --fix --ignore-pattern \"node_modules/**/*.js\" \"**/*.js\"",
    "knex": "knex",
    "knex:migrate": "knex migrate:latest",
    "knex:seed": "knex seed:run",
    "test": "npm run lint && npm run test:unit && npm run test:api && npm run test:cept",
    "test:unit": "mocha --timeout 15000 --recursive tests/unit/**/*.js",
    "test:api": "mocha --timeout 15000 --recursive tests/api/**/*.js",
    "test:cept": "codeceptjs run --steps",
    "start": "node server.js",
    "start:debug": "nodemon --inspect=0.0.0.0 server.js",
    "start:test": "nodemon server.js",
    "start:docker": "npm install --quiet"
  },
  "dependencies": {
    "ajv": "^6.10.0",
    "amqplib": "^0.5.3",
    "bcrypt": "^3.0.4",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.2",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "crypto-promise": "^2.1.0",
    "csurf": "^1.9.0",
    "ejs": "^2.6.1",
    "email-templates": "^5.0.4",
    "express": "^4.16.4",
    "express-ejs-layouts": "^2.5.0",
    "express-flash": "0.0.2",
    "express-rbac": "^1.1.1",
    "express-session": "^1.15.6",
    "express-status-monitor": "^1.2.3",
    "express-validator": "^5.3.1",
    "jsonwebtoken": "^8.5.0",
    "knex": "^0.16.3",
    "morgan": "^1.9.1",
    "ms": "^2.1.1",
    "nodemailer": "^6.0.0",
    "objection": "^1.6.1",
    "objection-db-errors": "^1.0.0",
    "objection-password": "^2.0.0",
    "objection-unique": "^1.0.1",
    "objection-visibility": "^0.4.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "path": "^0.12.7",
    "pg": "^7.8.0",
    "serve-favicon": "^2.5.0",
    "smtp-server": "^3.5.0",
    "sql-formatter": "^2.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "codeceptjs": "^2.0.8",
    "eslint": "^5.14.1",
    "eslint-plugin-prettier": "^3.0.1",
    "expect.js": "^0.3.1",
    "faker": "^4.1.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "webdriverio": "^5.4.17"
  }
}
